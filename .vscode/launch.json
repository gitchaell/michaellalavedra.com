{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Server Next.js Debug",
			"type": "node-terminal",
			"request": "launch",
			"command": "pnpm dev"
		},
		{
			"name": "Client Next.js Debug",
			"type": "chrome",
			"request": "launch",
			"url": "http://localhost:3000"
		},
		{
			"name": "FullStack Next.js Debug",
			"type": "node-terminal",
			"request": "launch",
			"command": "pnpm dev",
			"serverReadyAction": {
				"pattern": "(https?://.+)",
				"uriFormat": "%s",
				"action": "debugWithChrome"
			}
		}
	]
}
